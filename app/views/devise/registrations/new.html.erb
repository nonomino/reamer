<div class="flex items-center justify-center h-screen">
<div class="border rounded-md m-4 p-4 bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-gray-700 via-gray-900 to-black">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, {class: "badge badge-accent badge-outline" } %><br />
    <%= f.email_field :email, { class: "m-4 input input-bordered input-accent w-64" }%>
  </div>

  <div class="field">
    <%= f.label :password, {class: "badge badge-accent badge-outline" } %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, { class: "m-4 input input-bordered input-accent w-64" }%>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, {class: "badge badge-accent badge-outline" } %><br />
    <%= f.password_field :password_confirmation , { class: "m-4 input input-bordered input-accent w-64" }%>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", {class: "container btn btn-active btn-accent" } %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>